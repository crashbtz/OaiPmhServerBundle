<annotation>
    {# 8.1 Entity #}
    {% if annotation.entity|default %}
      <entity>{{ annotation.entity }}</entity>
    {%  endif %}
    {# 8.2 Date #}
    {% if annotation.date|default %}
      <date>
        <dateTime>{{ annotation.date }}</dateTime>
      </date>
    {%  endif %}
    {# 8.3 Description #}
    {% if annotation.description|default %}
      <description>
        <string language="{{ description.language }}" >{{ description.value }}</string>
      </description>
    {%  endif %}
</annotation>