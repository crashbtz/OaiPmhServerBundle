{% extends 'FtvenOaiPmhServerBundle::template.xml.twig' %}

{% block content %}
	<Identify>
		<repositoryName>{{ dataProvider.repositoryName }}</repositoryName>
		<baseURL>{{ url(app.request.attributes.get('_route')) }}</baseURL>
		<protocolVersion>2.0</protocolVersion>
		{% for adminEmail in dataProvider.adminEmails %}
			<adminEmail>{{ adminEmail }}</adminEmail>
		{% endfor %}
		<earliestDatestamp>{{ dataProvider.earliestDatestamp|date('Y-m-d') }}</earliestDatestamp>
		<deletedRecord>{{ dataProvider.deletedRecord|default('no') }}</deletedRecord>
		<granularity>YYYY-MM-DD</granularity>
	</Identify>
{% endblock %}